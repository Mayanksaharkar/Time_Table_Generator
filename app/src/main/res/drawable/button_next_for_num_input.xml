<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item android:left="7dp" android:top="10dp">
        <shape>
            <gradient android:startColor="#39F1EFDF" android:endColor="#39F1EFDF"/>
            <corners android:radius="8dp" />

        </shape>
    </item>
    <!-- White foreground. -->
    <item android:bottom="5dp" android:right="3dp">
        <shape>
            <gradient android:startColor="@color/offwhite" android:endColor="@color/offwhite"/>
            <stroke android:color="@color/green" android:width="2sp"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>