<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gray shadow. -->
    <item android:left="7dp" android:top="10dp">
        <shape>
            <gradient android:startColor="#540F1ACA" android:endColor="#540F1ACA"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- White foreground. -->
    <item android:bottom="3dp" android:right="3dp">
        <shape>
            <gradient   android:startColor="@color/blue" android:endColor="@color/blue" android:angle="360"/>

            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>